<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.codebreaker.batteryperformance.Activities.Optimize_pop_up"
    android:theme="@style/Pop_up"
    android:orientation="vertical"
    android:background="@drawable/rounded_background"
    android:gravity="center"

    >



    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/clean_circleview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        CircleProgressView:cpv_barColor="@color/primary"
        CircleProgressView:cpv_barWidth="30dp"
        CircleProgressView:cpv_innerContourSize="0dp"
        CircleProgressView:cpv_outerContourSize="0dp"
        CircleProgressView:cpv_outerContourColor="#D3D3D3"
        CircleProgressView:cpv_maxValue="100"
        CircleProgressView:cpv_rimColor="#ffffffff"
        CircleProgressView:cpv_rimWidth="20dp"
        CircleProgressView:cpv_spinColor="@color/primary"
        CircleProgressView:cpv_textColor="@color/primary_dark"
        CircleProgressView:cpv_fillColor="#D3D3D3"
        CircleProgressView:cpv_textScale="1"
        CircleProgressView:cpv_showUnit="true"
        CircleProgressView:cpv_unitColor="@color/primary_dark"
        CircleProgressView:cpv_unitScale="10"
        CircleProgressView:cpv_value="1"
        android:layout_margin="5dp"
        android:longClickable="false"
        android:layout_weight="1"
        android:layout_gravity="center"

        CircleProgressView:cpv_blockCount="18"
        CircleProgressView:cpv_blockScale="0.9"/>

</LinearLayout>
