<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/slide_activity_1"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:baselineAligned="false"
    android:paddingTop="50dp"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:weightSum="1">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_time_since_last_charge"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#D3D3D3"
        android:visibility="visible"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:background="#778899">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/time"
                android:layout_weight="2.5"
                android:layout_margin="9dp"
                android:src="@drawable/ic_timeline_white_24dp"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="#778899"
                android:layout_weight="1">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Health"
                    android:id="@+id/health_1"
                    android:textAlignment="center"
                    android:textColor="#ff000000"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/health"
                    android:textAlignment="center"
                    android:textColor="#fff1f6ff"
                    android:gravity="center"
                    android:layout_weight="1" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_plugged_type"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#3A3A38"
        android:visibility="visible"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="6dp"

        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:background="#778899"
            >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/charging_type"
                android:layout_weight="3"
                android:src="@drawable/ic_battery_alert_white_24dp"
                android:layout_margin="7dp"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="#778899"
                android:layout_weight="1">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Plugged Type"
                    android:id="@+id/plug"
                    android:textAlignment="center"
                    android:textColor="#ff000000"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/plugged_type"
                    android:textAlignment="center"
                    android:textColor="#fff1f6ff"
                    android:gravity="center"
                    android:layout_weight="1" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_monitor"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@drawable/ripple"
        android:visibility="visible"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="6dp"
        android:foreground="?selectableItemBackground"
        android:clickable="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:background="@drawable/ripple"
            android:id="@+id/linear_layout_monitor"
            android:foreground="?selectableItemBackground"
            android:clickable="false">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/imageView"
                android:layout_weight="3"
                android:src="@drawable/ic_visibility_white_24dp"
                android:padding="13dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/monitor"
                    android:textAlignment="center"
                    android:textColor="#fff1f6ff"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Usage"
                    android:textStyle="bold"
                    android:clickable="false" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_status"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#3A3A38"
        android:visibility="visible"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:background="#778899">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/charging_state"
                android:layout_weight="3"
                android:src="@drawable/ic_battery_charging_full_white_48dp"
                android:layout_margin="7dp"
                android:padding="4dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="#778899"
                android:layout_weight="1">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Status"
                    android:id="@+id/stat"
                    android:textAlignment="center"
                    android:textColor="#ff000000"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/status"
                    android:textAlignment="center"
                    android:textColor="#fff1f6ff"
                    android:gravity="center"
                    android:layout_weight="1" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>